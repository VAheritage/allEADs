      <c01 level="series" id="d1e193">
        <did>
          <unittitle>Manucript</unittitle>
        </did>
        <c02 level="item" id="d1e197">
          <did>
            <unittitle>"Fruit and Nut Trees: An
                  Arbor-Day-Plea"</unittitle>
            <unitdate era="ce" calendar="gregorian">n. d.</unitdate>
            <physdesc>
              <genreform>AMsS,</genreform>
              <extent>10 p.</extent>
            </physdesc>
          </did>
          <scopecontent>
            <p>[Tipped into booklet.]</p>
