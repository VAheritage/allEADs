        <c02 level="item" id="d1e197">
          <did>
            <unittitle>Preface, "Lectures and Fragments of
                  Lectures by 
                  <persname>James Russell Lowell</persname>" by 
                  <persname>Charles Eliot Norton</persname></unittitle>
            <unitdate era="ce" calendar="gregorian">n. d.</unitdate>
            <physdesc>
              <genreform>TMsS,</genreform>
